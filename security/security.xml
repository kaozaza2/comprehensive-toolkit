<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Security Groups -->
        <record id="group_comprehensive_manager" model="res.groups">
            <field name="name">Comprehensive Toolkit Manager</field>
            <field name="category_id" ref="base.module_category_administration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">Users in this group can manage all aspects of the comprehensive toolkit including ownership, assignments, access control, and responsibilities.</field>
        </record>

        <record id="group_toolkit_user" model="res.groups">
            <field name="name">Toolkit User</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="comment">Can use basic toolkit functionality</field>
        </record>

        <record id="group_toolkit_manager" model="res.groups">
            <field name="name">Toolkit Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('group_toolkit_user'))]"/>
            <field name="comment">Can manage all toolkit functionality and access all logs</field>
        </record>

        <!-- Record Rules for Ownership Logs -->
        <record id="ownership_log_rule_read" model="ir.rule">
            <field name="name">Ownership Log: Read Access</field>
            <field name="model_id" ref="model_tk_ownership_log"/>
            <field name="domain_force">['|', ('user_id', '=', user.id), ('old_owner_id', '=', user.id), ('new_owner_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ownership_log_rule_user" model="ir.rule">
            <field name="name">Ownership Log: User Access</field>
            <field name="model_id" ref="model_tk_ownership_log"/>
            <field name="groups" eval="[(4, ref('group_toolkit_user'))]"/>
            <field name="domain_force">[
                '|',
                ('user_id', '=', user.id),
                '|',
                ('old_owner_id', '=', user.id),
                ('new_owner_id', '=', user.id)
            ]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="False"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="ownership_log_rule_manager" model="ir.rule">
            <field name="name">Ownership Log: Manager Access</field>
            <field name="model_id" ref="model_tk_ownership_log"/>
            <field name="groups" eval="[(4, ref('group_toolkit_manager'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

