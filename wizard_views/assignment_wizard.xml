<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Assignment Wizard -->
    <record id="view_bulk_assign_wizard_form" model="ir.ui.view">
        <field name="name">tk.bulk.assign.wizard.form</field>
        <field name="model">tk.bulk.assign.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Assignment">
                <group>
                    <field name="model_name" invisible="True"/>
                    <field name="record_ids" invisible="True"/>
                    <field name="user_ids" widget="many2many_tags" required="1"/>
                    <field name="assignment_deadline"/>
                    <field name="assignment_priority"/>
                </group>
                <field name="assignment_description" placeholder="Assignment instructions..."/>
                <field name="reason" placeholder="Reason for bulk assignment..."/>
                <footer>
                    <button name="action_assign" string="Assign" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bulk_assign_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Assignment</field>
        <field name="res_model">tk.bulk.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
