<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bulk Ownership Transfer Wizard -->
    <record id="view_bulk_ownership_wizard_form" model="ir.ui.view">
        <field name="name">tk.bulk.ownership.wizard.form</field>
        <field name="model">tk.bulk.ownership.wizard</field>
        <field name="arch" type="xml">
            <form string="Bulk Ownership Transfer">
                <group>
                    <field name="model_name" invisible="True"/>
                    <field name="record_ids" invisible="True"/>
                    <field name="new_owner_id" required="1"/>
                </group>
                <field name="reason" placeholder="Reason for ownership transfer..."/>
                <footer>
                    <button name="action_transfer" string="Transfer" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_bulk_ownership_wizard" model="ir.actions.act_window">
        <field name="name">Bulk Ownership Transfer</field>
        <field name="res_model">tk.bulk.ownership.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Transfer Ownership Wizard -->
    <record id="view_transfer_ownership_wizard_form" model="ir.ui.view">
        <field name="name">tk.transfer.ownership.wizard.form</field>
        <field name="model">tk.transfer.ownership.wizard</field>
        <field name="arch" type="xml">
            <form string="Transfer Ownership">
                <group>
                    <field name="model_name" invisible="True"/>
                    <field name="record_id" invisible="True"/>
                    <field name="current_owner_id" readonly="1"/>
                    <field name="new_owner_id" required="1"/>
                </group>
                <field name="reason" placeholder="Reason for ownership transfer..."/>
                <footer>
                    <button name="action_transfer" string="Transfer" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_transfer_ownership_wizard" model="ir.actions.act_window">
        <field name="name">Transfer Ownership</field>
        <field name="res_model">tk.transfer.ownership.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>