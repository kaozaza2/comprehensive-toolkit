<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Responsibility Log Tree View -->
        <record id="view_responsibility_log_tree" model="ir.ui.view">
            <field name="name">tk.responsibility.log.tree</field>
            <field name="model">tk.responsibility.log</field>
            <field name="arch" type="xml">
                <tree string="Responsibility Logs" default_order="date desc">
                    <field name="date"/>
                    <field name="action"
                           decoration-info="action in ['assign', 'delegate', 'assign_multiple', 'delegate_multiple', 'add_responsible', 'assign_secondary', 'assign_secondary_multiple', 'add_secondary']"
                           decoration-warning="action in ['transfer', 'escalate', 'transfer_multiple', 'transfer_secondary_multiple', 'delegate_secondary_multiple']"
                           decoration-danger="action in ['revoke', 'revoke_all', 'remove_responsible', 'remove_secondary', 'revoke_primary', 'revoke_secondary']"/>
                    <field name="model_name"/>
                    <field name="record_reference"/>
                    <field name="old_responsible_user_id"/>
                    <field name="new_responsible_user_id"/>
                    <field name="extra_info"/>
                    <field name="user_id"/>
                    <field name="reason"/>
                    <button name="open_record" type="object" icon="fa-external-link" title="Open Record" attrs="{'invisible': [('model_name', '=', False)]}"/>
                </tree>
            </field>
        </record>

        <!-- Responsibility Log Form View -->
        <record id="view_responsibility_log_form" model="ir.ui.view">
            <field name="name">tk.responsibility.log.form</field>
            <field name="model">tk.responsibility.log</field>
            <field name="arch" type="xml">
                <form string="Responsibility Log" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="display_name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group string="Record Information">
                                <field name="model_name"/>
                                <field name="res_id"/>
                                <field name="record_reference"/>
                                <button name="open_record" type="object" string="Open Record" class="btn-primary" attrs="{'invisible': [('model_name', '=', False)]}"/>
                            </group>
                            <group string="Change Details">
                                <field name="action"/>
                                <field name="date"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Responsibility Change">
                                <field name="old_responsible_user_id"/>
                                <field name="new_responsible_user_id"/>
                            </group>
                            <group string="Additional Information">
                                <field name="extra_info" widget="html"/>
                            </group>
                        </group>
                        <group string="Reason">
                            <field name="reason" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Responsibility Log Search View -->
        <record id="view_responsibility_log_search" model="ir.ui.view">
            <field name="name">tk.responsibility.log.search</field>
            <field name="model">tk.responsibility.log</field>
            <field name="arch" type="xml">
                <search string="Search Responsibility Logs">
                    <field name="action"/>
                    <field name="model_name"/>
                    <field name="old_responsible_user_id"/>
                    <field name="new_responsible_user_id"/>
                    <field name="user_id"/>
                    <field name="reason"/>
                    <separator/>
                    <filter name="today" string="Today" domain="[('date', '>=', context_today().strftime('%Y-%m-%d 00:00:00')), ('date', '<=', context_today().strftime('%Y-%m-%d 23:59:59'))]"/>
                    <filter name="this_week" string="This Week" domain="[('date', '>=', (context_today() - datetime.timedelta(days=context_today().weekday())).strftime('%Y-%m-%d')), ('date', '<=', (context_today() + datetime.timedelta(days=6-context_today().weekday())).strftime('%Y-%m-%d'))]"/>
                    <filter name="this_month" string="This Month" domain="[('date', '>=', context_today().strftime('%Y-%m-01')), ('date', '<=', (context_today().replace(day=1) + datetime.timedelta(days=32)).replace(day=1) - datetime.timedelta(days=1))]"/>
                    <separator/>
                    <filter name="assignments" string="Assignments" domain="[('action', 'in', ['assign', 'assign_multiple', 'assign_secondary', 'assign_secondary_multiple', 'add_responsible', 'add_secondary'])]"/>
                    <filter name="transfers" string="Transfers" domain="[('action', 'in', ['transfer', 'transfer_multiple', 'delegate', 'delegate_multiple', 'transfer_secondary_multiple', 'delegate_secondary_multiple'])]"/>
                    <filter name="escalations" string="Escalations" domain="[('action', '=', 'escalate')]"/>
                    <filter name="revocations" string="Revocations" domain="[('action', 'in', ['revoke', 'revoke_all', 'remove_responsible', 'remove_secondary', 'revoke_primary', 'revoke_secondary'])]"/>
                    <separator/>
                    <filter name="my_actions" string="My Actions" domain="[('user_id', '=', uid)]"/>
                    <separator/>
                    <group expand="0" string="Group By">
                        <filter name="group_action" string="Action" context="{'group_by': 'action'}"/>
                        <filter name="group_model" string="Model" context="{'group_by': 'model_name'}"/>
                        <filter name="group_user" string="Changed By" context="{'group_by': 'user_id'}"/>
                        <filter name="group_date" string="Date" context="{'group_by': 'date:day'}"/>
                        <filter name="group_old_user" string="Old Responsible" context="{'group_by': 'old_responsible_user_id'}"/>
                        <filter name="group_new_user" string="New Responsible" context="{'group_by': 'new_responsible_user_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Responsibility Log Action -->
        <record id="action_responsibility_log" model="ir.actions.act_window">
            <field name="name">Responsibility Logs</field>
            <field name="res_model">tk.responsibility.log</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'search_default_this_month': 1}</field>
            <field name="search_view_id" ref="view_responsibility_log_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    No responsibility logs found!
                </p>
                <p>
                    Responsibility logs track all changes to record responsibility assignments.
                    This includes assignments, transfers, delegations, escalations, and revocations.
                </p>
            </field>
        </record>

        <!-- Menu Item -->
        <menuitem id="menu_responsibility_log"
                  name="Responsibility Logs"
                  parent="menu_toolkit_logs"
                  action="action_responsibility_log"
                  sequence="20"/>
    </data>
</odoo>
