<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Access Log Tree View -->
        <record id="view_access_log_tree" model="ir.ui.view">
            <field name="name">tk.access.log.tree</field>
            <field name="model">tk.access.log</field>
            <field name="arch" type="xml">
                <tree string="Access Logs" default_order="date desc">
                    <field name="date"/>
                    <field name="action" decoration-success="action in ['grant_user', 'grant_group']" decoration-danger="action in ['revoke_user', 'revoke_group']" decoration-info="action == 'change_level'"/>
                    <field name="model_name"/>
                    <field name="record_reference"/>
                    <field name="target_user_id"/>
                    <field name="target_group_id"/>
                    <field name="user_id"/>
                    <field name="reason"/>
                    <button name="open_record" type="object" icon="fa-external-link" title="Open Record" attrs="{'invisible': [('model_name', '=', False)]}"/>
                </tree>
            </field>
        </record>

        <!-- Access Log Form View -->
        <record id="view_access_log_form" model="ir.ui.view">
            <field name="name">tk.access.log.form</field>
            <field name="model">tk.access.log</field>
            <field name="arch" type="xml">
                <form string="Access Log" create="false" edit="false">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="display_name" readonly="1"/></h1>
                        </div>
                        <group>
                            <group string="Record Information">
                                <field name="model_name"/>
                                <field name="res_id"/>
                                <field name="record_reference"/>
                            </group>
                            <group string="Change Details">
                                <field name="action"/>
                                <field name="date"/>
                                <field name="user_id"/>
                            </group>
                        </group>
                        <group>
                            <group string="Access Target">
                                <field name="target_user_id"/>
                                <field name="target_group_id"/>
                            </group>
                        </group>
                        <group string="Reason">
                            <field name="reason" nolabel="1"/>
                        </group>
                        <group string="Additional Information" attrs="{'invisible': [('extra_info', '=', False)]}">
                            <field name="extra_info" nolabel="1"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Access Log Search View -->
        <record id="view_access_log_search" model="ir.ui.view">
            <field name="name">tk.access.log.search</field>
            <field name="model">tk.access.log</field>
            <field name="arch" type="xml">
                <search string="Search Access Logs">
                    <field name="model_name"/>
                    <field name="action"/>
                    <field name="target_user_id"/>
                    <field name="target_group_id"/>
                    <field name="user_id"/>
                    <field name="reason"/>
                    <filter string="User Grants" name="user_grants" domain="[('action', '=', 'grant_user')]"/>
                    <filter string="User Revokes" name="user_revokes" domain="[('action', '=', 'revoke_user')]"/>
                    <filter string="Group Grants" name="group_grants" domain="[('action', '=', 'grant_group')]"/>
                    <filter string="Group Revokes" name="group_revokes" domain="[('action', '=', 'revoke_group')]"/>
                    <filter string="Level Changes" name="level_changes" domain="[('action', '=', 'change_level')]"/>
                    <separator/>
                    <filter string="Today" name="today" domain="[('date', '&gt;=', datetime.datetime.combine(context_today(), datetime.time(0,0,0))), ('date', '&lt;=', datetime.datetime.combine(context_today(), datetime.time(23,59,59)))]"/>
                    <group expand="0" string="Group By">
                        <filter string="Action" name="group_action" context="{'group_by': 'action'}"/>
                        <filter string="Model" name="group_model" context="{'group_by': 'model_name'}"/>
                        <filter string="Changed By" name="group_user" context="{'group_by': 'user_id'}"/>
                        <filter string="Date" name="group_date" context="{'group_by': 'date:day'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Access Log Action -->
        <record id="action_access_log" model="ir.actions.act_window">
            <field name="name">Access Logs</field>
            <field name="res_model">tk.access.log</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_access_log_search"/>
        </record>
    </data>
</odoo>
