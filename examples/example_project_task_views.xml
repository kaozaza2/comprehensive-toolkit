<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Task Views -->
    <record id="view_project_task_tree" model="ir.ui.view">
        <field name="name">tk.project.task.tree</field>
        <field name="model">tk.project.task</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='draft'" decoration-warning="state=='in_progress'" decoration-success="state=='done'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="project_id"/>
                <field name="task_type"/>
                <field name="state"/>
                <field name="priority"/>
                <field name="owner_id"/>
                <field name="assigned_user_ids" widget="many2many_tags"/>
                <field name="responsible_user_ids" widget="many2many_tags"/>
                <field name="assignment_deadline"/>
                <field name="progress" widget="progressbar"/>
                <field name="is_blocked"/>
                <field name="is_overdue"/>
            </tree>
        </field>
    </record>

    <record id="view_project_task_form" model="ir.ui.view">
        <field name="name">tk.project.task.form</field>
        <field name="model">tk.project.task</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_start_task" string="Start Task" type="object" class="btn-primary"
                            invisible="not can_start"/>
                    <button name="action_review_task" string="Send for Review" type="object" class="btn-secondary"
                            invisible="state != 'in_progress'"/>
                    <button name="action_complete_task" string="Complete Task" type="object" class="btn-success"
                            invisible="state != 'in_progress'"/>

                    <!-- Ownership Actions -->
                    <button name="%(action_transfer_ownership_wizard)d" string="Transfer Ownership" type="action" class="btn-warning"
                            invisible="not can_transfer"/>
                    <button name="claim_ownership" string="Claim Ownership" type="object" class="btn-info"
                            invisible="owner_id or can_transfer"/>
                    <button name="release_ownership" string="Release Ownership" type="object" class="btn-secondary"
                            invisible="not can_release"/>

                    <!-- Assignment Actions -->
                    <button name="%(action_bulk_assign_wizard)d" string="Assign Users" type="action" class="btn-primary"
                            invisible="not can_assign"/>
                    <button name="unassign_all" string="Unassign All" type="object" class="btn-warning"
                            invisible="not can_assign or not assigned_user_ids"/>

                    <!-- Responsibility Actions -->
                    <button name="%(action_delegate_responsibility_wizard)d" string="Delegate Responsibility" type="action" class="btn-info"
                            invisible="not can_delegate"/>

                    <!-- Access Management -->
                    <button name="%(action_manage_access_wizard)d" string="Manage Access" type="action" class="btn-secondary"
                            invisible="not can_grant_access"/>
                    <button name="action_manage_custom_groups" string="Manage Groups" type="object" class="btn-secondary"
                            invisible="not can_manage_groups"/>

                    <field name="state" widget="statusbar" statusbar_visible="draft,in_progress,review,done"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_dependencies" type="object" class="oe_stat_button" icon="fa-link">
                            <field name="depends_on_task_ids" string="Dependencies" widget="statinfo"/>
                        </button>
                        <button name="action_view_blocking_tasks" type="object" class="oe_stat_button" icon="fa-ban">
                            <field name="blocking_task_ids" string="Blocking" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Task Name..."/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="project_id"/>
                            <field name="milestone_id"/>
                            <field name="task_type"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="estimated_hours"/>
                            <field name="actual_hours"/>
                            <field name="is_blocked"/>
                            <field name="can_start"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Description">
                            <field name="description" placeholder="Task description..."/>
                        </page>

                        <page string="Ownership">
                            <group>
                                <group>
                                    <field name="owner_id"/>
                                    <field name="co_owner_ids" widget="many2many_tags"/>
                                    <field name="ownership_date"/>
                                </group>
                                <group>
                                    <field name="is_owned"/>
                                    <field name="can_transfer"/>
                                    <field name="can_release"/>
                                    <field name="can_manage_co_owners"/>
                                </group>
                            </group>
                        </page>

                        <page string="Assignment">
                            <group>
                                <group>
                                    <field name="assigned_user_ids" widget="many2many_tags"/>
                                    <field name="assigner_id"/>
                                    <field name="assignment_date"/>
                                    <field name="assignment_deadline"/>
                                </group>
                                <group>
                                    <field name="assignment_status"/>
                                    <field name="assignment_priority"/>
                                    <field name="is_assigned"/>
                                    <field name="is_overdue"/>
                                </group>
                            </group>
                            <field name="assignment_description" placeholder="Assignment instructions..."/>
                        </page>

                        <page string="Responsibility">
                            <group>
                                <group>
                                    <field name="responsible_user_ids" widget="many2many_tags"/>
                                    <field name="secondary_responsible_ids" widget="many2many_tags"/>
                                    <field name="responsibility_type"/>
                                </group>
                                <group>
                                    <field name="responsibility_start_date"/>
                                    <field name="responsibility_end_date"/>
                                    <field name="is_responsibility_active"/>
                                    <field name="can_delegate"/>
                                </group>
                            </group>
                            <field name="responsibility_description" placeholder="Responsibility details..."/>
                        </page>

                        <page string="Access Control">
                            <group>
                                <group>
                                    <field name="access_level"/>
                                    <field name="allowed_user_ids" widget="many2many_tags"/>
                                    <field name="allowed_group_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="custom_access_group_ids" widget="many2many_tags"/>
                                    <field name="has_access"/>
                                    <field name="can_grant_access"/>
                                </group>
                            </group>
                            <separator string="Access Dates"/>
                            <group>
                                <field name="access_start_date"/>
                                <field name="access_end_date"/>
                                <field name="is_access_expired"/>
                            </group>
                        </page>

                        <page string="Dependencies">
                            <group>
                                <field name="depends_on_task_ids" widget="many2many_tags"/>
                                <field name="blocking_task_ids" widget="many2many_tags"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_project_task_search" model="ir.ui.view">
        <field name="name">tk.project.task.search</field>
        <field name="model">tk.project.task</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="project_id"/>
                <field name="owner_id"/>
                <field name="assigned_user_ids"/>
                <field name="responsible_user_ids"/>

                <filter string="My Tasks" name="assigned_to_me" domain="[('assigned_user_ids', 'in', [uid])]"/>
                <filter string="My Owned Tasks" name="owned_by_me" domain="[('owner_id', '=', uid)]"/>
                <filter string="My Responsibilities" name="responsible_me" domain="[('responsible_user_ids', 'in', [uid])]"/>
                <filter string="Overdue" name="overdue" domain="[('is_overdue', '=', True)]"/>
                <filter string="Blocked" name="blocked" domain="[('is_blocked', '=', True)]"/>
                <filter string="Can Start" name="can_start" domain="[('can_start', '=', True)]"/>

                <separator/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="in_progress" domain="[('state', '=', 'in_progress')]"/>
                <filter string="Under Review" name="review" domain="[('state', '=', 'review')]"/>
                <filter string="Done" name="done" domain="[('state', '=', 'done')]"/>

                <group expand="1" string="Group By">
                    <filter string="Project" name="group_project" context="{'group_by': 'project_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Task Type" name="group_type" context="{'group_by': 'task_type'}"/>
                    <filter string="Owner" name="group_owner" context="{'group_by': 'owner_id'}"/>
                    <filter string="Priority" name="group_priority" context="{'group_by': 'priority'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Actions for Project Task -->
    <record id="action_project_task" model="ir.actions.act_window">
        <field name="name">Project Tasks</field>
        <field name="res_model">tk.project.task</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_project_task_search"/>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first project task!
            </p>
            <p>
                Manage tasks with comprehensive ownership, assignment, and access control.
            </p>
        </field>
    </record>

    <!-- Server Actions for Project Tasks -->
    <record id="action_bulk_assign_tasks" model="ir.actions.server">
        <field name="name">Bulk Assign Tasks</field>
        <field name="model_id" ref="model_tk_project_task"/>
        <field name="binding_model_id" ref="model_tk_project_task"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'type': 'ir.actions.act_window',
        'name': 'Bulk Assign Tasks',
        'res_model': 'tk.bulk.assign.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {
            'default_model_name': 'tk.project.task',
            'default_record_ids': str(records.ids),
        }
    }
        </field>
    </record>

    <record id="action_bulk_transfer_ownership" model="ir.actions.server">
        <field name="name">Bulk Transfer Ownership</field>
        <field name="model_id" ref="model_tk_project_task"/>
        <field name="binding_model_id" ref="model_tk_project_task"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'type': 'ir.actions.act_window',
        'name': 'Bulk Transfer Ownership',
        'res_model': 'tk.bulk.ownership.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {
            'default_model_name': 'tk.project.task',
            'default_record_ids': str(records.ids),
        }
    }
        </field>
    </record>

    <record id="action_bulk_set_access" model="ir.actions.server">
        <field name="name">Bulk Set Access Level</field>
        <field name="model_id" ref="model_tk_project_task"/>
        <field name="binding_model_id" ref="model_tk_project_task"/>
        <field name="binding_view_types">list</field>
        <field name="state">code</field>
        <field name="code">
if records:
    action = {
        'type': 'ir.actions.act_window',
        'name': 'Bulk Set Access Level',
        'res_model': 'tk.bulk.access.wizard',
        'view_mode': 'form',
        'target': 'new',
        'context': {
            'default_model_name': 'tk.project.task',
            'default_record_ids': str(records.ids),
        }
    }
        </field>
    </record>
</odoo>
