<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Project Views -->
    <record id="view_project_tree" model="ir.ui.view">
        <field name="name">tk.project.tree</field>
        <field name="model">tk.project</field>
        <field name="arch" type="xml">
            <tree decoration-info="state=='planning'" decoration-warning="state=='active'" decoration-success="state=='completed'" decoration-muted="state=='cancelled'">
                <field name="name"/>
                <field name="state"/>
                <field name="owner_id"/>
                <field name="responsible_user_ids" widget="many2many_tags"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="task_count"/>
                <field name="progress" widget="progressbar"/>
                <field name="budget"/>
            </tree>
        </field>
    </record>

    <record id="view_project_form" model="ir.ui.view">
        <field name="name">tk.project.form</field>
        <field name="model">tk.project</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <!-- Ownership Actions -->
                    <button name="%(action_transfer_ownership_wizard)d" string="Transfer Ownership" type="action" class="btn-warning"
                            invisible="not can_transfer"/>
                    <button name="claim_ownership" string="Claim Ownership" type="object" class="btn-info"
                            invisible="owner_id or can_transfer"/>
                    <button name="release_ownership" string="Release Ownership" type="object" class="btn-secondary"
                            invisible="not can_release"/>

                    <!-- Responsibility Actions -->
                    <button name="%(action_delegate_responsibility_wizard)d" string="Delegate Responsibility" type="action" class="btn-info"
                            invisible="not can_delegate"/>

                    <!-- Access Management -->
                    <button name="%(action_manage_access_wizard)d" string="Manage Access" type="action" class="btn-secondary"
                            invisible="not can_grant_access"/>
                    <button name="action_manage_custom_groups" string="Manage Groups" type="object" class="btn-secondary"
                            invisible="not can_manage_groups"/>

                    <field name="state" widget="statusbar" statusbar_visible="planning,active,completed"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_tasks" type="object" class="oe_stat_button" icon="fa-tasks">
                            <field name="task_count" string="Tasks" widget="statinfo"/>
                        </button>
                        <button name="action_view_milestones" type="object" class="oe_stat_button" icon="fa-flag">
                            <field name="milestone_ids" string="Milestones" widget="statinfo"/>
                        </button>
                    </div>

                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Project Name..."/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="progress" widget="progressbar"/>
                        </group>
                        <group>
                            <field name="budget"/>
                            <field name="currency_id"/>
                            <field name="completed_task_count"/>
                        </group>
                    </group>

                    <field name="description" placeholder="Project description..."/>

                    <notebook>
                        <page string="Tasks">
                            <field name="task_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="state"/>
                                    <field name="assigned_user_ids" widget="many2many_tags"/>
                                    <field name="progress" widget="progressbar"/>
                                    <field name="assignment_deadline"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Ownership">
                            <group>
                                <group>
                                    <field name="owner_id"/>
                                    <field name="co_owner_ids" widget="many2many_tags"/>
                                    <field name="ownership_date"/>
                                </group>
                                <group>
                                    <field name="is_owned"/>
                                    <field name="can_transfer"/>
                                    <field name="can_release"/>
                                    <field name="can_manage_co_owners"/>
                                </group>
                            </group>
                        </page>

                        <page string="Responsibility">
                            <group>
                                <group>
                                    <field name="responsible_user_ids" widget="many2many_tags"/>
                                    <field name="secondary_responsible_ids" widget="many2many_tags"/>
                                    <field name="responsibility_type"/>
                                </group>
                                <group>
                                    <field name="responsibility_start_date"/>
                                    <field name="responsibility_end_date"/>
                                    <field name="is_responsibility_active"/>
                                    <field name="can_delegate"/>
                                </group>
                            </group>
                            <field name="responsibility_description" placeholder="Responsibility details..."/>
                        </page>

                        <page string="Access Control">
                            <group>
                                <group>
                                    <field name="access_level"/>
                                    <field name="allowed_user_ids" widget="many2many_tags"/>
                                    <field name="allowed_group_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="custom_access_group_ids" widget="many2many_tags"/>
                                    <field name="has_access"/>
                                    <field name="can_grant_access"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="view_project_search" model="ir.ui.view">
        <field name="name">tk.project.search</field>
        <field name="model">tk.project</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="owner_id"/>
                <field name="responsible_user_ids"/>

                <filter string="My Projects" name="owned_by_me" domain="[('owner_id', '=', uid)]"/>
                <filter string="My Responsibilities" name="responsible_me" domain="[('responsible_user_ids', 'in', [uid])]"/>
                <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                <filter string="Planning" name="planning" domain="[('state', '=', 'planning')]"/>

                <group expand="1" string="Group By">
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Owner" name="group_owner" context="{'group_by': 'owner_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_project" model="ir.actions.act_window">
        <field name="name">Projects</field>
        <field name="res_model">tk.project</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_project_search"/>
    </record>

    <!-- Document Views -->
    <record id="view_document_tree" model="ir.ui.view">
        <field name="name">tk.document.tree</field>
        <field name="model">tk.document</field>
        <field name="arch" type="xml">
            <tree decoration-info="status=='draft'" decoration-warning="status=='review'" decoration-success="status=='approved'" decoration-muted="status=='archived'">
                <field name="name"/>
                <field name="document_type"/>
                <field name="status"/>
                <field name="version"/>
                <field name="owner_id"/>
                <field name="access_level"/>
                <field name="create_date"/>
            </tree>
        </field>
    </record>

    <record id="view_document_form" model="ir.ui.view">
        <field name="name">tk.document.form</field>
        <field name="model">tk.document</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_submit_for_review" string="Submit for Review" type="object" class="btn-primary"
                            invisible="status != 'draft'"/>
                    <button name="action_approve" string="Approve" type="object" class="btn-success"
                            invisible="status != 'review'"/>

                    <!-- Ownership Actions -->
                    <button name="%(action_transfer_ownership_wizard)d" string="Transfer Ownership" type="action" class="btn-warning"
                            invisible="not can_transfer"/>
                    <button name="claim_ownership" string="Claim Ownership" type="object" class="btn-info"
                            invisible="owner_id or can_transfer"/>

                    <!-- Access Management -->
                    <button name="%(action_manage_access_wizard)d" string="Manage Access" type="action" class="btn-secondary"
                            invisible="not can_grant_access"/>
                    <button name="action_manage_custom_groups" string="Manage Groups" type="object" class="btn-secondary"
                            invisible="not can_manage_groups"/>

                    <field name="status" widget="statusbar" statusbar_visible="draft,review,approved"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Document Name..."/></h1>
                    </div>

                    <group>
                        <group>
                            <field name="document_type"/>
                            <field name="version"/>
                        </group>
                        <group>
                            <field name="owner_id"/>
                            <field name="access_level"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Content">
                            <field name="content" widget="html"/>
                        </page>

                        <page string="Attachments">
                            <field name="attachment_ids">
                                <tree>
                                    <field name="name"/>
                                    <field name="datas_fname"/>
                                    <field name="file_size"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>

                        <page string="Ownership">
                            <group>
                                <group>
                                    <field name="owner_id"/>
                                    <field name="co_owner_ids" widget="many2many_tags"/>
                                    <field name="ownership_date"/>
                                </group>
                                <group>
                                    <field name="is_owned"/>
                                    <field name="can_transfer"/>
                                    <field name="can_release"/>
                                    <field name="can_manage_co_owners"/>
                                </group>
                            </group>
                        </page>

                        <page string="Access Control">
                            <group>
                                <group>
                                    <field name="access_level"/>
                                    <field name="allowed_user_ids" widget="many2many_tags"/>
                                    <field name="allowed_group_ids" widget="many2many_tags"/>
                                </group>
                                <group>
                                    <field name="custom_access_group_ids" widget="many2many_tags"/>
                                    <field name="has_access"/>
                                    <field name="can_grant_access"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="action_document" model="ir.actions.act_window">
        <field name="name">Documents</field>
        <field name="res_model">tk.document</field>
        <field name="view_mode">tree,form</field>
    </record>
</odoo>
